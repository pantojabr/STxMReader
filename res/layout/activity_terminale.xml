<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TERM_RLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Terminale" >

    <EditText
        android:id="@+id/TERM_et_Comandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/TERM_btn_Invia"
        android:ems="10"
        android:inputType="text"
        android:textSize="25sp" >

    </EditText>

    <EditText
        android:id="@+id/TERM_et_Monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TERM_btn_Invia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:inputType="textMultiLine"
        android:typeface="monospace" />

    <Button
        android:id="@+id/TERM_btn_Pulisci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TERM_et_Comandi"
        android:layout_alignBottom="@+id/TERM_et_Comandi"
        android:layout_alignParentRight="true"
        android:onClick="OnClickButtonPulisci"
        android:text="@string/pulisci" />

    <Button
        android:id="@+id/TERM_btn_Invia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TERM_btn_Pulisci"
        android:layout_alignBottom="@+id/TERM_btn_Pulisci"
        android:layout_toLeftOf="@+id/TERM_btn_Pulisci"
        android:onClick="OnClickButtonInvia"
        android:text="@string/invia" />

</RelativeLayout>
